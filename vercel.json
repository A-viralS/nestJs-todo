{
    "version": 2,
    "builds": [
        {
            "src": "src/main.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [

                    "prisma/schema.prisma",
                    "node_modules/.prisma/client/**"
                ],
                "prerender": {
                    "includeFiles": [
                        "src/**/*.ts",
                        "prisma/schema.prisma"
                    ]
                }
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/main.ts",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ]
        }
    ]
}